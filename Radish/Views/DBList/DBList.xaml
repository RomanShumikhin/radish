<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Radish.ViewModels;assembly=Radish"
             MinWidth="100"
             x:Class="Radish.DBList.DBList">
  <Design.DataContext>
    <vm:DBListViewModel/>
  </Design.DataContext>
  <StackPanel>
      <TextBlock Text="DB List" />
      <StackPanel Orientation="Horizontal">
        <DropDown Items="{Binding ListOfDbNumbers}" SelectedItem="{Binding SelectedDb}">
          <DropDown.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding DbDisplay}" />
            </DataTemplate>
          </DropDown.ItemTemplate>
        </DropDown>
        <Button Width="160" Command="{Binding OnDbSelected}">Select</Button>
      </StackPanel>
  </StackPanel>
</UserControl>
