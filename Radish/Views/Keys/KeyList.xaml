<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Radish.ViewModels;assembly=Radish"
             MinWidth="100" MinHeight="200"
             x:Class="Radish.Keys.KeyList">
  <Design.DataContext>
    <vm:KeyListViewModel/>
  </Design.DataContext>
  <StackPanel>
  <TextBlock Text="Key List" />
  <ItemsControl Items="{Binding ListOfKeys}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Button Content="{Binding KeyName}" Background="White" Foreground="Black" />
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </StackPanel>
</UserControl>
