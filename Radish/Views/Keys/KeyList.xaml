<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="200"
             xmlns:vm="clr-namespace:Radish.ViewModels;assembly=Radish"
             MinWidth="100" MinHeight="200"
             x:Class="Radish.Keys.KeyList">
  <Design.DataContext>
    <vm:KeyListViewModel/>
  </Design.DataContext>
  <StackPanel Spacing="5">
    <TextBlock Text="Key List" />
    <TextBox Watermark="Filter" Text="{Binding SearchString}" IsEnabled="{Binding IsButtonEnabled}" />
    <Button Command="{Binding SearchKeys}" IsEnabled="{Binding IsButtonEnabled}" Background="#005720">Refresh Keys</Button>
    <ListBox Items="{Binding ListOfKeys}" SelectedItem="{Binding SelectedKey}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding KeyName}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
